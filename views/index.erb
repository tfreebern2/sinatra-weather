<html>
  <head>
    <link href="/style.css" rel="stylesheet" />
  </head>
  <body>
    <main>
      <h2>The weather right now in <%= @city %></h2>
      <h1><%= @temp %>&deg;</h1>
      <div>
        <% @icons.each do |icon| %>
          <img src="<%= icon %>" alt="weather icon" />
        <% end %>
      </div>
    </main>
    <footer>
      <ul>
        <% @cities.each do |city| %>
          <li><a href="/?city=<%= URI.escape(city) %>"><%= city %></a></li>
        <% end %>
      </ul>
      <p>
        A simple Sinatra API application built
        by <a href="https://github.com/tfreebern2">Tim Freebern</a> --
        Icons by <a href="flaticon.com">flaticon</a>
      </p>
    </footer>
  </body>
</html>
